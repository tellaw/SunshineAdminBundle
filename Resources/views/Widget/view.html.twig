<div class="portlet light portlet-fit portlet-datatable bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-eye font-dark"></i>
            <span class="caption-subject font-dark sbold uppercase">{{ widget.title }}</span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-container">

            <div class="form-horizontal">
                {% for field, config in fields %}
                    <div class="form-group field-{{ config.type }} ">
                        <label class="col-sm-2 control-label">
                            <b>
                                {{ config.label }}
                            </b>
                        </label>
                        <div class="col-sm-10">
                            <div class="form-control">
                                {{ sunshine_render_entity_field(attribute(entity, field), config) }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

</div>
