{% extends '@TellawSunshineAdmin/base-skeleton.html.twig' %}
{% block page %}

    <!-- BEGIN: Header -->
    <header class="m-grid__item  m-header no-print"  data-minimize-offset="200" data-minimize-mobile-offset="200" >
        <div class="m-container m-container--fluid m-container--full-height">
            <div class="m-stack m-stack--ver m-stack--desktop">
                <!-- BEGIN: Brand -->
                <div class="m-stack__item m-brand  m-brand--skin-dark ">
                    <div class="m-stack m-stack--ver m-stack--general">
                        <div class="m-stack__item m-stack__item--middle m-brand__logo">
                            <a href="/" class="m-brand__logo-wrapper">
                                <img alt="{{ getLogo().alt }}" src="{{ getLogo().external_url ? getLogo().url : asset (getLogo().url) }}"/>
                            </a>
                        </div>
                        <div class="m-stack__item m-stack__item--middle m-brand__tools">
                            <!-- BEGIN: Left Aside Minimize Toggle -->
                            <a href="javascript:;" id="m_aside_left_minimize_toggle" class="m-brand__icon m-brand__toggler m-brand__toggler--left m--visible-desktop-inline-block
					 ">
                                <span></span>
                            </a>
                            <!-- END -->
                            <!-- BEGIN: Responsive Aside Left Menu Toggler -->
                            <a href="javascript:;" id="m_aside_left_offcanvas_toggle" class="m-brand__icon m-brand__toggler m-brand__toggler--left m--visible-tablet-and-mobile-inline-block">
                                <span></span>
                            </a>
                            <!-- END -->
                            <!-- BEGIN: Responsive Header Menu Toggler -->
                            <a id="m_aside_header_menu_mobile_toggle" href="javascript:;" class="m-brand__icon m-brand__toggler m--visible-tablet-and-mobile-inline-block">
                                <span></span>
                            </a>
                            <!-- END -->
                            <!-- BEGIN: Topbar Toggler -->
                            <a id="m_aside_header_topbar_mobile_toggle" href="javascript:;" class="m-brand__icon m--visible-tablet-and-mobile-inline-block">
                                <i class="flaticon-more"></i>
                            </a>
                            <!-- BEGIN: Topbar Toggler -->
                        </div>
                    </div>
                </div>
                <!-- END: Brand -->
                <div class="m-stack__item m-stack__item--fluid m-header-head" id="m_header_nav">
                    <div id="m_header_menu" class="m-header-menu m-aside-header-menu-mobile m-aside-header-menu-mobile--offcanvas  m-header-menu--skin-light m-header-menu--submenu-skin-light m-aside-header-menu-mobile--skin-dark m-aside-header-menu-mobile--submenu-skin-dark ">
                        <h1 style="margin-top:15px;">{% block title %}{% endblock %}</h1>
                    </div>
                    <!-- BEGIN: Horizontal Menu -->
                    <button class="m-aside-header-menu-mobile-close  m-aside-header-menu-mobile-close--skin-dark " id="m_aside_header_menu_mobile_close_btn">
                        <i class="la la-close"></i>
                    </button>

                    <!-- END: Horizontal Menu -->
                    <!-- BEGIN: Topbar -->
                    {% block usermenu %}
                        <div id="m_header_topbar" class="m-topbar  m-stack m-stack--ver m-stack--general">
                            <div class="m-stack__item m-topbar__nav-wrapper">
                                <ul class="m-topbar__nav m-nav m-nav--inline">
                                    <li class="m-nav__item m-topbar__user-profile m-topbar__user-profile--img  m-dropdown m-dropdown--medium m-dropdown--arrow m-dropdown--header-bg-fill m-dropdown--align-right m-dropdown--mobile-full-width m-dropdown--skin-light" data-dropdown-toggle="click">
                                        <a href="#" class="m-nav__link m-dropdown__toggle">
												<span class="m-topbar__userpic">
													<img src="{{ asset ('bundles/tellawsunshineadmin/assets/app/media/img/users/default-avatar.png') }}" class="m--img-rounded m--marginless m--img-centered" alt=""/>
												</span>
                                        <span class="m-topbar__username m--hide">
                                                {{ app.user.firstname is defined ? app.user.firstname : ''}}
                                            </span>
                                        </a>
                                        <div class="m-dropdown__wrapper">
                                            <span class="m-dropdown__arrow m-dropdown__arrow--right m-dropdown__arrow--adjust"></span>
                                            <div class="m-dropdown__inner">
                                                <div class="m-dropdown__header m--align-center">
                                                    <div class="m-card-user m-card-user--skin-dark">
                                                            <div class="m-card-user__pic">
                                                                <img src="{{ asset ('bundles/tellawsunshineadmin/assets/app/media/img/users/default-avatar.png') }}" class="m--img-rounded m--marginless" alt=""/>
                                                            </div>

                                                            <div class="m-card-user__details">

                                                                <span class="m-card-user__name m--font-weight-500">
                                                                    {{ app.user.fullname is defined ? app.user.fullname : (app.user.username is defined ? app.user.username : '') }}
                                                                </span>

                                                                {% if routeExists('profile') %}
                                                                    <a href="{{ path ('profile') }}" class="m-card-user__email m--font-weight-300 m-link">
                                                                        Mon profil
                                                                    </a>
                                                                {% else %}
                                                                    <a href="" class="m-card-user__email m--font-weight-300 m-link">
                                                                        {{ app.user.email is defined ? app.user.email : '' }}
                                                                    </a>
                                                                {% endif %}
                                                            </div>
                                                    </div>
                                                </div>
                                                <div class="m-dropdown__body">
                                                    <div class="m-dropdown__content">
                                                        <ul class="m-nav m-nav--skin-light">
                                                            <li class="m-nav__section m--hide">
                                                                <span class="m-nav__section-text">
                                                                    Section
                                                                </span>
                                                            </li>
                                                            <li class="m-nav__separator m-nav__separator--fit"></li>
                                                            <li class="m-nav__item">
                                                                {% if app.user %}
                                                                    <a href="{{ path ('logout') }}" class="btn m-btn--pill    btn-secondary m-btn m-btn--custom m-btn--label-brand m-btn--bolder">
                                                                        Se deconnecter
                                                                    </a>
                                                                {% endif %}
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    {% endblock %}
                    <!-- END: Topbar -->
                </div>
            </div>
        </div>
    </header>
    <!-- END: Header -->
    <!-- begin::Body -->
    <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
        <!-- BEGIN: Left Aside -->
        <button class="m-aside-left-close  m-aside-left-close--skin-dark no-print" id="m_aside_left_close_btn">
            <i class="la la-close"></i>
        </button>
        <div id="m_aside_left" class="m-grid__item	m-aside-left  m-aside-left--skin-dark no-print">
            <!-- BEGIN: Aside Menu -->
            <div
                    id="m_ver_menu"
                    class="m-aside-menu  m-aside-menu--skin-dark m-aside-menu--submenu-skin-dark "
                    data-menu-vertical="true"
                    data-menu-scrollable="false" data-menu-dropdown-timeout="500"
            >
                <ul class="m-menu__nav  m-menu__nav--dropdown-submenu-arrow " style="padding-top:0px;">
                    <!-- Insert Here the menu -->
                    {% if  app.request.attributes.get('_route') == "sunshine_page" %}
                        {{ render(controller('TellawSunshineAdminBundle:Menu:index',{ "pageType" : "sunshine_page", "pageIdentifier" : pageId } )) }}
                    {% elseif app.request.attributes.get('_route') == "sunshine_page_list" %}
                        {{ render(controller('TellawSunshineAdminBundle:Menu:index',{ "pageType" : "sunshine_page_list", "pageIdentifier" : entity } )) }}
                    {% elseif app.request.attributes.get('_route') == "sunshine_page_edit" %}
                        {{ render(controller('TellawSunshineAdminBundle:Menu:index',{ "pageType" : "sunshine_page_edit", "pageIdentifier" : getClass(entity) } )) }}
                    {% else %}
                        {{ render(controller('TellawSunshineAdminBundle:Menu:index',{ "pageType" : "custom_page", "pageIdentifier" : app.request.attributes.get('_route') } )) }}
                    {% endif %}
                </ul>

            </div>
            <!-- END: Aside Menu -->
        </div>
        <!-- END: Left Aside -->
        <div class="m-grid__item m-grid__item--fluid m-wrapper ">

            <div class="m-content">
                <!-- BODY CONTENT OF PAGE -->
                {% if app.session.flashBag.has('success') %}
                    <div class="flashBagAlert alert alert-success">
                        {% for msg in app.session.flashBag.get('success') %}
                            {{ msg }}
                        {% endfor %}
                    </div>
                {% endif %}

                {% if app.session.flashBag.has('error') %}
                    <div class="flashBagAlert alert alert-danger">
                        {% for msg in app.session.flashBag.get('error') %}
                            {{ msg }}
                        {% endfor %}
                    </div>
                {% endif %}

                {% block body %}
                    Default page
                {% endblock %}
            </div>

        </div>
    </div>
    <!-- end:: Body -->


{% endblock %}
